<%= form_for @fund, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :fund_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :fund_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fund_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :fund_description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fund_strategy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :fund_strategy, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :strategy_why_i_buy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :strategy_why_i_buy, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :strategy_why_i_sell, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :strategy_why_i_sell, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :strategy_allocation_discipline, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :strategy_allocation_discipline, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :strategy_other_notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :strategy_other_notes, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nav_shares, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nav_shares, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  funds_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
