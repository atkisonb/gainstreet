<%- model_class = Fund -%>
<div class="page-header">
  <h1><%=t '.title', :default => Fund %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:fund_name) %></th>
      <th><%= model_class.human_attribute_name(:fund_description) %></th>
      <th><%= model_class.human_attribute_name(:fund_strategy) %></th>
      <th><%= model_class.human_attribute_name(:strategy_why_i_buy) %></th>
      <th><%= model_class.human_attribute_name(:strategy_why_i_sell) %></th>
      <th><%= model_class.human_attribute_name(:strategy_allocation_discipline) %></th>
      <th><%= model_class.human_attribute_name(:strategy_other_notes) %></th>
      <th><%= model_class.human_attribute_name(:nav_shares) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.id %></td>
        <td><%= fund.fund_name %></td>
        <td><%= fund.fund_description %></td>
        <td><%= fund.fund_strategy %></td>
        <td><%= fund.strategy_why_i_buy %></td>
        <td><%= fund.strategy_why_i_sell %></td>
        <td><%= fund.strategy_allocation_discipline %></td>
        <td><%= fund.strategy_other_notes %></td>
        <td><%= fund.nav_shares %></td>
        <td><%=l fund.created_at, format: :long %></td>
        <td>
          <%= link_to fund_path(fund), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to fund_path(fund), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fund_path,
            :class => 'btn btn-primary' %>
