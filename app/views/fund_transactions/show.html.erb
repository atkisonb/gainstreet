<%- model_class = FundTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => FundTransaction %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:market_shares) %></dt>
      <dd><pre class="prettyprint"><%= @fund_transaction.market_shares %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amount) %></dt>
      <dd><pre class="prettyprint"><%= @fund_transaction.amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:market_action) %></dt>
      <dd><pre class="prettyprint"><%= @fund_transaction.market_action %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fund_transactions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fund_transaction_path(@fund_transaction), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fund_transaction_path(@fund_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

